local HttpService = game:GetService("HttpService")
local Webhook_URL = "https://discord.com/api/webhooks/1303042097263153202/fbOmQvQfCuY3Q59RTEEtMVVyFKI7w3h2-cJPfVwGrz-vlDYYr9BgI3m-_seoabL6AFPO"
local http_request = syn and syn.request or http and http.request or http_request or request or httprequest

-- Fetching game details
local gameName = game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name
local gameLink = "https://www.roblox.com/games/" .. game.PlaceId
