local response = http_request({
    Url = Webhook_URL,
    Method = 'POST',
    Headers = {
        ['Content-Type'] = 'application/json'
    },
    Body = HttpService:JSONEncode({
        ["embeds"] = {{
            ["title"] = "*ðŸŸ¢ Zirhy Hub Ran ðŸŸ¢*",
            ["description"] = game.Players.LocalPlayer.Name .. " has executed the script.",
            ["type"] = "rich",
            ["color"] = tonumber(0xffffff),
            ["fields"] = {
                {
                    ["name"] = "Game Name:",
                    ["value"] = gameName,
                    ["inline"] = true
                },
                {
                    ["name"] = "Hardware ID:",
                    ["value"] = game:GetService("RbxAnalyticsService"):GetClientId(),
                    ["inline"] = true
                },
                {
                    ["name"] = "Game Link:",
                    ["value"] = gameLink,
                    ["inline"] = true
                },
                {
                    ["name"] = "Execution Time:",
                    ["value"] = executionTime,
                    ["inline"] = true
                }
            }
        }}
    })
